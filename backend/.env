# Khalti Payment Gateway Configuration
# Get these from https://khalti.com/ after signing up
KHALTI_PUBLIC_KEY=your_khalti_public_key_here
KHALTI_SECRET_KEY=your_khalti_secret_key_here
KHALTI_API_URL=https://a.khalti.com/api/v2

# Application Base URL (frontend URL for redirects)
APP_BASE_URL=http://localhost:5173

# Database Configuration (defaults to H2 file-based)
DATABASE_URL=jdbc:h2:file:./data/desn;AUTO_SERVER=TRUE
DATABASE_USERNAME=sa
DATABASE_PASSWORD=

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Email Configuration (optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
EMAIL_NOTIFICATIONS_ENABLED=false
ADMIN_EMAIL=admin@desnepal.com
FROM_EMAIL=noreply@esnepal.com

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRATION=86400000

# Storage Mode (file or database)
STORAGE_MODE=database
FILE_STORAGE_DIR=src/main/resources/static/resources

# File Upload Limits
MAX_FILE_SIZE=52428800
